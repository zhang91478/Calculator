<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入:"
            android:maxLines="1"
            android:textSize="33sp"/>

        <EditText
            android:id="@+id/edit_text5_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="33sp" />
        <Button
            android:id="@+id/button5_0"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="下一个"
            android:textSize="30sp"
            android:layout_weight="0.20" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:id="@+id/textView5_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="平均值:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView5_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/textView5_4"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="极差:"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/textView5_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/textView5_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="标准差:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5_7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/textView5_8"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="方差:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5_9"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button"
        >
        <Button
            android:id="@+id/button5_1"
            android:layout_width="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="7"
            android:textSize="33sp" />
        <Button
            android:id="@+id/button5_2"
            android:layout_width="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="8"
            android:textSize="33sp" />
        <Button
            android:id="@+id/button5_3"
            android:layout_width="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="9"
            android:textSize="33sp" />
        <Button
            android:id="@+id/button5_4"
            android:layout_width="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="4"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_5"
            android:layout_width="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="5"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_6"
            android:layout_width="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="6"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_7"
            android:layout_width="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="1"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_8"
            android:layout_width="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="2"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_9"
            android:layout_width="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="3"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_10"
            android:layout_width="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="0"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_11"
            android:layout_width="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="00"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_12"
            android:layout_width="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:textColor="@color/text"
            android:text="·"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_13"
            android:layout_width="0dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:text="←"
            android:textColor="@color/text"
            android:textSize="33sp" />

        <Button
            android:id="@+id/button5_14"
            android:layout_width="0dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:background="@color/button"
            android:text="C"
            android:textColor="@color/text"
            android:textSize="33sp" />
    </GridLayout>
</LinearLayout>

